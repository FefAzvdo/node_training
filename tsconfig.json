// tsconfig.json
{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {      
     "@modules/*": ["src/modules/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@tests/*": ["src/tests/*"]
    }
  },
  // Inclui a pasta 'src' e todos os arquivos .ts na raiz (se houver)
  "include": ["src", "*.ts"], 
  "exclude": ["node_modules"]
}
